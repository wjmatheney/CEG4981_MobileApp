<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewCal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current View of Telescope"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageViewCal1"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic[1]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target View: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewCal3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TARGET NAME"
            android:textSize="24sp" />

        </LinearLayout>




    <ImageView
        android:id="@+id/imageViewCal2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic[5]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonLeftCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Left" />

        <Button
            android:id="@+id/buttonUpCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Up" />

        <Button
            android:id="@+id/buttonRightCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonNextCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next" />

        <Button
            android:id="@+id/buttonDownCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Down" />

        <Button
            android:id="@+id/buttonRefreshCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Refresh" />

    </LinearLayout>

</LinearLayout>